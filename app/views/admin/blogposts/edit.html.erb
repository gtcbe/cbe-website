<div class="row">
	<div class="col-md-8 offset-2">
			<%= form_for([:admin, @post]) do |f| %>
			
				<%= f.label :name %>
				<%= f.text_field :name, :value => @post.name %>
				
				<%= f.label :title %>
				<%= f.text_field :title, :value => @post.title %>
				
				<%= f.label :text %>
				<%= f.cktext_area :text, rows: 10, :value => @post.text %>
			
				<%= f.submit "Save", class: "btn btn-large btn-primary" %>
			<% end %>
	</div>
</div>