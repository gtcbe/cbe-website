<div class="row">
	<div class="col-md-8 offset-2">
			<%= form_for(:session, url: sessions_path) do |f| %>
			
				<%= f.label :email %>
				<%= f.text_field :email %>
				
				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.submit "Log in", class: "btn btn-large btn-primary" %>
			<% end %>
			<%= link_to "forgotten password?", new_password_reset_path %>
	</div>
</div>