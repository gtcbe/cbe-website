<div class="row">
	<div class="col-md-3">
		<%= render partial:"sidebar" %>
	</div>
	<div class="col-md-8">
		<section>
		<%= render @wiki_page %>
		</section>
		<hr>
		<section>
			<h3>Comments (<%= @wiki_page.comments.count %>)</h3>
			<% if @wiki_page.comments.any? %>
				<ol class="comments">
					<%= render @comments %>
				</ol>
			<% end %>
		</section>
		<section>
			<% if signed_in?  %>
				<%= render "shared/comments_form" %>
			<% else %>
				<%= render "shared/login_form" %>
			<% end %>
		</section>
	</div>
</div>
