<div class="row">
	<div class="col-md-4 col-md-offset-4 registration">
		<h1> SIGN UP </h1>
		<%= form_for(@user) do |f| %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<div>
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
		</div>
			<%= f.submit "Create Account", class: "btn btn-large", id: "btn-signup" %>
		<% end %>
	</div>
</div>
